<!--
  Diamond DA 20 Katana - 2009 - Emmanuel BARANGER
                       - 2013 - Updated
                       - April 2014 Updated with Melchior's script
					   - Updated by Ron Haertel

  source       : http://en.wikipedia.org/wiki/Diamond_DA20

  Wingspan     : 10.87 m  (35 ft 8 in)
  length       :  7.16 m  (23 ft 6 in)
  height       :  2.18 m  ( 7 ft 2 in)
  Empty mass   :   529 kg ( 1166 lb)
  Engine       : 1 Continental IO-240-B Fixed pitch Hoffman, Sensenich, 125 hp
  Cruise speed :   138 kt (256 km/h)
-->

<airplane mass="1166" version="YASIM_VERSION_CURRENT" >

  <!-- Approach configuration -->
  <approach speed="50" aoa="6" fuel="0.5">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.2"/>
    <control-setting axis="/controls/engines/engine[0]/mixture" value="1.0"/>
    <control-setting axis="/controls/engines/engine[0]/propeller-pitch" value="0.5"/>
    <control-setting axis="/controls/flight/flaps" value="1"/>
    <control-setting axis="/controls/gear/gear-down" value="1"/>
    <solve-weight idx="0" weight="170.0"/>
    <solve-weight idx="1" weight="170.0"/>
  </approach>

  <!-- Cruise configuration -->
  <cruise speed="138" alt="0" fuel="0.8">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.75"/>
    <control-setting axis="/controls/engines/engine[0]/mixture" value="1"/>
    <control-setting axis="/controls/engines/engine[0]/propeller-pitch" value="1"/>
    <control-setting axis="/controls/flight/flaps" value="0"/>
    <control-setting axis="/controls/gear/gear-down" value="1"/>
    <control-setting axis="/controls/flight/elevator-trim" value="-0.001"/>
  </cruise>

  <cockpit x="1.541" y="0.222" z="0.462"/>

  <fuselage ax="3.3781" ay="0" az="0.0280" bx=" 1.4651" by="0" bz="0.1144" width="1.051" taper="0.4" midpoint="1"/>
  <fuselage ax="1.4651" ay="0" az="0.1144" bx="-3.4726" by="0" bz="0.0280" width="1.051" taper="0.2" midpoint="0"/>
  
  <wing x="1.367" y="0.513" z="-0.234"
        chord="1.195"
        length="4.54"
        taper="0.70"
        dihedral="4"
        incidence="1"
        sweep="-2"
        camber="0.01">
        <stall aoa="19" width="1" peak="1.5"/>
        <flap0 start="0.05" end="0.61" lift="1.45" drag="1.4"/>
        <flap1 start="0.61" end="0.97" lift="1.2" drag="1.1"/>

        <control-input axis="/controls/flight/flaps" control="FLAP0"/>
        <control-input axis="/controls/flight/aileron" control="FLAP1" split="true"/>
        <control-input axis="/controls/flight/aileron-trim" control="FLAP1" split="true"/> 

        <control-output control="FLAP0" prop="/surface-positions/flap-pos-norm"/>
        <control-output control="FLAP1" side="left" prop="/surface-positions/left-aileron-pos-norm"/>
        <control-output control="FLAP1" side="right" prop="/surface-positions/right-aileron-pos-norm"/>

        <control-speed control="FLAP0" transition-time="4"/>
  </wing>

  <mstab x="1.5199" y="5.0392" z="0.0852"
         chord="0.85"
         length="0.46"
         taper="0.40"
         dihedral="25"
         incidence="1"
         sweep="30"
         camber="0.01">
         <stall aoa="20" width="1" peak="1.5"/>
  </mstab>

  <hstab x="-3.17514" y="0" z="1.08417"
         chord="0.892"
         length="1.308"
         taper="0.50"
         sweep="5">
         <stall aoa="20" width="5" peak="1.5"/>
         <flap0 start="0" end="1" lift="1.7" drag="1.5"/>

         <control-input axis="/controls/flight/elevator" control="FLAP0"/>
         <control-input axis="/controls/flight/elevator-trim" control="FLAP0"/>

         <control-output control="FLAP0" prop="/surface-positions/elevator-pos-norm"/>
  </hstab>

  <vstab x="-2.765" y="0" z="-0.106"
       chord="1.385"
       length="1.25" 
       taper="0.60"
       sweep="20">
       <stall aoa="16" width="1" peak="1.5"/>
       <flap0 start="0" end="1" lift="1.2" drag="1.1"/>

       <control-input axis="/controls/flight/rudder" control="FLAP0" invert="true"/>

       <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm" min="1" max="-1"/>
  </vstab>

  <!--  Lycoming IO-320-L2A
                 source       : http://en.wikipedia.org/wiki/Continental_O-240

                 power        : 125 hp at 2,800 rpm
                 weight       : 255 lb  (116 kg)
                 Displacement : 240 in3 (3.93 L)
                 Compression  : 8.5:1
  -->
  <propeller x="3.000" y="0" z="0.046" 
             mass="255" 
             radius="0.83"
             moment="1.5"
             cruise-speed="138" 
             cruise-rpm="2600"
             cruise-alt="0" 
             cruise-power="110"
             takeoff-power="125" 
             takeoff-rpm="2800" >
             <actionpt x="3.447" y="0" z="0.046"  />
             <piston-engine eng-rpm="2800" 
                            alt="0000" 
                            eng-power="120" 
                            displacement="240" 
                            compression="8.5"/>
             <control-input axis="/controls/engines/engine[0]/propeller-pitch" control="ADVANCE"/>
             <control-input axis="/controls/engines/engine[0]/throttle" control="THROTTLE"/>
             <control-input axis="/controls/engines/engine[0]/starter" control="STARTER"/>
             <control-input axis="/controls/engines/engine[0]/magnetos" control="MAGNETOS"/>
             <control-input axis="/controls/engines/engine[0]/mixture" control="MIXTURE"/>
  </propeller>

  <gear x="2.939" y="0" z="-1.109" 
        compression="0.1" 
        spring="0.6">
        <control-input axis="/controls/flight/rudder" control="STEER" src0="-1" src1="1" dst0="-0.2" dst1="0.2"/>
   </gear>

  <!-- 0.820 -->
  <gear x="1.322" y="0.962" z="-1.109" 
        compression="0.12" 
        spring="0.6">
        <control-input axis="/controls/gear/brake-left" control="BRAKE" split="true"/>
        <control-input axis="/controls/gear/brake-parking" control="BRAKE" split="true"/>
  </gear>

  <gear x="1.322" y="-0.962" z="-1.109" 
        compression="0.12" 
        spring="0.6">
        <control-input axis="/controls/gear/brake-right" control="BRAKE" split="true"/>
        <control-input axis="/controls/gear/brake-parking" control="BRAKE" split="true"/>
  </gear>

  <!-- Fuel  -->
  <tank x="1.37" y=" 1.323" z="-0.272" capacity="169" />
  <tank x="1.37" y="-1.323" z="-0.272" capacity="169" />

  <!-- pilot -->
  <weight x="1.72" y="0" z="-0.10" mass-prop="/yasim/Katana/pilot-lb"/>

  <!-- passenger -->
  <weight x="1.72" y="0" z="-0.10" mass-prop="/yasim/Katana/passenger-lb"/>
  
  <ballast x=" 3" y="0" z="0" mass="364.25"/>
  <ballast x="0.48" y="0" z="0" mass="0"/>
  <ballast x="-3" y="0" z="0" mass="-40"/>
  
</airplane>
