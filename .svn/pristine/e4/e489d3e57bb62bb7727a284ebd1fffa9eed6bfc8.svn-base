      <y-m> -0.222 </y-m>
      <z-m> -0.078 </z-m>
    </offsets>
  </model>

  <!-- Pilote seat -->
  <model>
    <path>Aircraft/Katana/Models/Interior/Seats/seat.xml</path>
    <offsets>
      <x-m> -1.37154 </x-m>
      <y-m> -0.25201 </y-m>
      <z-m>  0.06911 </z-m>
    </offsets>
  </model>

  <!-- Passager seat -->
  <model>
    <path>Aircraft/Katana/Models/Interior/Seats/seat.xml</path>
    <offsets>
      <x-m> -1.37154 </x-m>
      <y-m>  0.25201 </y-m>
      <z-m>  0.06911 </z-m>
    </offsets>
  </model>

  <!-- Yokes -->
  <model>
    <path>Aircraft/Katana/Models/Interior/Panel/Instruments/Yoke/yoke.xml</path>
    <offsets>
      <x-m> -1.92665 </x-m>
      <y-m> -0.25201 </y-m>
      <z-m> -0.23738 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Katana/Models/Interior/Panel/Instruments/Yoke/yoke.xml</path>
    <offsets>
      <x-m> -1.92665 </x-m>
      <y-m>  0.25201 </y-m>
      <z-m> -0.23738 </z-m>
    </offsets>
  </model>

  <!-- Pedals -->
  <model>
    <path>Aircraft/Katana/Models/Interior/Panel/Instruments/Pedals/pedals.xml</path>
    <offsets>
      <x-m> -2.31283 </x-m>
      <y-m> -0.26985 </y-m>
      <z-m> -0.23152 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Katana/Models/Interior/Panel/Instruments/Pedals/pedals.xml</path>
    <offsets>
      <x-m> -2.31283 </x-m>
      <y-m>  0.26985 </y-m>
      <z-m> -0.23152 </z-m>
    </offsets>
  </model>

  <!-- Canopy -->
  <animation>
    <name>IntLaVerriere</name>
    <object-name>inttourvitres</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>IntLaVerriere</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>translate</type>
    <object-name>IntLaVerriere</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> 0.0 </dep></entry>
      <entry><ind> 0.2 </ind><dep> 0.3 </dep></entry>
      <entry><ind> 1.0 </ind><dep> 0.3 </dep></entry>
    </interpolation>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>IntLaVerriere</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> 0.0 </dep></entry>
      <entry><ind> 0.5 </ind><dep> 0.6 </dep></entry>
      <entry><ind> 1.0 </ind><dep> 0.6 </dep></entry>
    </interpolation>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntLaVerriere</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>  0 </dep></entry>
      <entry><ind> 1 </ind><dep> 45 </dep></entry>
    </interpolation>
    <center>
      <x-m> -1.731 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.354 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

