<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>ai.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>scale</object-name>
    <object-name>fond2</object-name>
    <object-name>cache</object-name>
    <object-name>float</object-name>
    <object-name>marque</object-name>
    <object-name>bouton</object-name>
    <object-name>face</object-name>

    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Katana/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>fond2</object-name>
    <object-name>scale</object-name>
    <object-name>float</object-name>
    <object-name>marque</object-name>
    <condition>
      <property>/controls/lighting/instrument-lights</property>
    </condition>
    <emission>
      <red>   0.80 </red>
      <green> 0.50 </green>
      <blue>  0.50 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>fond2</object-name>
    <object-name>scale</object-name>
    <object-name>float</object-name>
    <property>/orientation/roll-deg</property>
    <factor>1.0</factor>
    <axis>
      <x> 1 </x>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>float</object-name>
    <property>/orientation/pitch-deg</property>
    <factor>-0.0002</factor>
    <min-m> -0.1 </min-m>
    <max-m>  0.1 </max-m>
    <axis>
      <z> 1 </z>
    </axis>
  </animation>

</PropertyList>
